{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "organizer",
  "version": "0.1.0",
  "identifier": "com.organizer.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "cir-organizer",
        "width": 900,
        "height": 650
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}

